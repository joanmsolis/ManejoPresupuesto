@model TiposCuentas
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Tipos de Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas.
    Ejemplo: prestamos, tergetas de credito ect.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

